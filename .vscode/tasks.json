{
    "tasks": [
        {
            "type": "process",
            "label": "Clean",
            "command": "make",
            "args": [
                "distclean"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Build"
        },
        {
            "type": "shell",
            "label": "Configure",
            "command": "${cwd}/configure",
            "args": [
                "--with-ldap=plugin",
                "--with-sql=plugin",
                "--with-lua=plugin",
                "--with-pgsql",
                "--with-gssapi=plugin",
                "--with-solr",
                "--with-flatcurve",
                "--with-icu",
                "--with-lz4",
                "--with-zstd",
                "--with-bzlib",
                "--with-stemmer",
                "--with-textcat",
                "--with-libcap",
                "--enable-experimental-mail-utf8",
                "--disable-static",
                "--prefix=${cwd}/dovecot",
                "--without-systemd",
                "--with-moduledir=${cwd}/dovecot/modules",
                "--with-ssldir=${cwd}/ssl"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [],
            "detail": "Configure"
        },
        {
            "type": "shell",
            "label": "Make",
            "command": "make",
            "args": [
                "-j",
                "V=0"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Configure"
            ],
            "detail": "Make"
        },
        {
            "type": "shell",
            "label": "Make install",
            "command": "make",
            "args": [
                "install-strip"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Make"
            ],
            "detail": "Build"
        },
        {
            "type": "process",
            "label": "running",
            "command": "${cwd}/dovecot/sbin/dovecot",
            "args": [
                "-c",
                "${cwd}/dovecot/etc/dovecot/dovecot.conf",
                "-F"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Make install"
            ],
            "detail": "Build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}